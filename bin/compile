#!/bin/bash

echo "HIIIIIIIIIIIII"
ls -al $1

mkdir $1/.bundle
cp $1/.heroku_config/config $1/.bundle
sed -i "s,/app,$1,g" $1/.bundle/config

cat $1/.bundle/config

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH$1/librsync
echo $LD_LIBRARY_PATH

export LIBRARY_PATH=$LIBRARY_PATH$1/librsync
echo $LIBRARY_PATH

cd $1
bundle install
